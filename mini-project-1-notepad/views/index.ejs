<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Document</title>
</head>
<body>
  <div class="main w-full min-h-screen bg-zinc-900">
    <div class="form p-10 text-white">
      <form action="/create" method="post">
        <input class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-800" name="title" type="text" placeholder="Title">
        <textarea class="block w-full rounded-md outline-none px-5 py-2 mt-2 resize-none bg-zinc-800" name="details" placeholder="Write task here"></textarea>
        <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Create task">
      </form>
    </div>
    <div class="tasks p-10 flex flex-wrap gap-3">
      <% if(files.length > 0){ %>
        <% files.map(function(val){ %>
          <div class="task min-w-72 px-3 py-4 rounded-md bg-zinc-800">
            <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
            <div class="flex justify-between items-center mt-3 gap-5">
              <div class="flex flex-col">
                <a class="text-blue-500" href="/file/<%= val%>">Read more</a>
                <a class="text-red-500" href="/delete/<%= val%>">Delete</a>
              </div>
              <div class="flex flex-col">
                <a class="text-zinc-500" href="/edit/<%= val%>">Edit Filename</a>
                <a class="text-zinc-500" href="/editcontent/<%= val%>">Edit Content</a>
              </div>
              
              
            </div>
          </div>
        <% }) %>
      <% } else{ %>
        <h3 class="text-zinc-300">No task yet.</h3>
      <% } %>   
    </div>
  </div>
  <script src="/javascripts/script.js"></script>
</body>
</html>